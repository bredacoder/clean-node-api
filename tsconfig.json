{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@validation/*": ["validation/*"],
    }
  },
  "include": [
    "src"
  ],
}